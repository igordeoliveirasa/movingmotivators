<h1>Listing user_game_levels</h1>

<table>
  <thead>
    <tr>
      <th>User game</th>
      <th>Game level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_game_levels.each do |user_game_level| %>
      <tr>
        <td><%= user_game_level.user_game %></td>
        <td><%= user_game_level.game_level %></td>
        <td><%= link_to 'Show', user_game_level %></td>
        <td><%= link_to 'Edit', edit_user_game_level_path(user_game_level) %></td>
        <td><%= link_to 'Destroy', user_game_level, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

